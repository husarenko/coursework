@using FoodDeliveryApp.Models.Enums
@using Microsoft.AspNetCore.Identity
@inject UserManager<Person> _userManager


@{
    var user = await _userManager.GetUserAsync(User);
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - deliver [Food Delivery App]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light box-shadow mb-3">
            <div class="container-fluid d-flex justify-content-between align-items-center">
                
                <div class="d-flex align-items-center justify-content-center navbar-brand">
                    <a asp-area="" asp-controller="Home" asp-action="Index">
                        <img src="~/media/logo.png" alt="Logo" class="navbar-brand" style="width: 150px; height: auto; margin-right: 0;">
                    </a>
                    <ul class="navbar-nav" style="margin-left: 25px;">
                        <li class="nav-item">
                            <form asp-area="" asp-controller="Home" asp-action="Privacy" method="get">
                                <button type="submit" class="btn btn-header text-white"><i class="fa fa-question" aria-hidden="true" style="margin-right: 10px;"></i>Про проєкт</button>
                            </form>
                        </li>
                        <li class="nav-item" style="margin-left: 15px;">
                            @if (IsSectionDefined("AdditionalScripts"))
                            {
                                <div class="additional-scripts">
                                    @RenderSection("AdditionalScripts", required: false)
                                </div>
                            }
                        </li>
                    </ul>
                </div>
                <div class="d-flex align-items-center">
                    <partial name="_LoginPartial" />
                </div>
                
            </div>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
            </div>
        </nav>
    </header>
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
    <footer class="footer-main">
        <div class="footer">
            &copy; 2024 - deliver
        </div>
    </footer>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
