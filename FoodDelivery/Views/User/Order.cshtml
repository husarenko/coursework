@model UserPanelViewModel

@{
    ViewData["Title"] = "Замовлення";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Manrope:wght@500&family=Open+Sans:ital,wght@0,300..800;1,300..800&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <div class="container">
        <div class="row text-white">
            <div class="col">
                <h1 class="text-white mb-5">Замовлення @Model.CurrentOrder.Id</h1>
                <h4>Номер замовлення: @Model.CurrentOrder.Id</h4>
                <h4>Дата замовлення: @Model.CurrentOrder.OrderDate.ToString("dd/MM/yyyy HH:mm")</h4>
                <h4>Ім'я користувача: @Model.CurrentOrder.UserName</h4>
                <h4>Номер телефона: @Model.CurrentOrder.UserPhone</h4>
                <h4>Адреса: @Model.CurrentOrder.DeliveryAddress</h4>
                <h4>Спосіб оплати: @Model.CurrentOrder.paymentMethod</h4>
                <h4>Статус: @Model.CurrentOrder.Status</h4>
                <h3 class="mt-5">Усього: @Model.CurrentOrder.TotalPrice ₴</h3>
            </div>
            <div class="col">
                <h1 class="text-white">Товари</h1>
                <div class="card text-white mt-5" style="background-color: #fff0; border: none; border-color: #fff0; box-shadow: none;">
                    <div class="card-body" style="background-color: #23532d; border-radius: 15px;">
                        @foreach (var item in Model.CurrentOrder.Items)
                        {
                            <div class="row mb-2 align-items-center">
                                <div class="col">
                                    <h6 class="mb-0">@item.DishName</h6>
                                </div>
                                <div class="col col-lg-3">
                                    <p class="mb-0">@item.Price₴ x @item.Quantity</p>
                                </div>
                                <div class="col col-lg-3">
                                    <p class="mb-0"><i class="fa fa-arrow-right" aria-hidden="true" style="margin-right: 15px;"></i> @(item.Quantity * item.Price)₴</p>
                                </div>
                            </div>
                            <div class="border-bottom mb-2" style="border-color: #33383e !important;"></div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
